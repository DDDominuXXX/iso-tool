mount -o bind /root/isodevice/data/etc /root/isodevice/data/etc

mount -t overlay \
	-o lowerdir=/root/etc \
	-o upperdir=/root/isodevice/data/etc \
	-o workdir=$(mktemp -d /root/tmp/XXXXXXXX) \
	. /root/etc

mount -o bind /root/isodevice/data/home /root/isodevice/data/home

mount -t overlay \
	-o lowerdir=/root/home \
	-o upperdir=/root/isodevice/data/home \
	-o workdir=$(mktemp -d /root/tmp/XXXXXXXX) \
	. /root/home

# Start an early shell for debugging.

sh
